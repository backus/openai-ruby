#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'openai'
require 'dotenv'
require 'pry'
require 'pry-byebug'

Dotenv.load

def start_repl
  cache_dir = Pathname.new(__dir__).parent.join('tmp/console_cache')
  cache_dir.mkpath unless cache_dir.exist?
  openai = OpenAI.create(
    ENV.fetch('OPENAI_API_KEY'),
    cache: cache_dir
  )
  binding.pry
end

start_repl
